<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/d_contact_image"
        android:src="@drawable/greenball"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/d_contact_name"
        android:text="Name: Ball"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/d_contact_email"
        android:text="Email : Ball"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/d_contact_mobile"
        android:text="Mobile : Ball"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_margin="20dp"
        android:textStyle="bold"
        />


</LinearLayout>